{
  "name": "clodo-dev-site",
  "version": "1.0.0",
  "description": "Pre-Flight Checker for Cloudflare Workers - Reduce custom software costs by 60% with enterprise orchestration framework",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "prebuild": "npm run lint && npm run type-check && npm run validate:blog && npm run check-links",
    "build": "npm run build:astro",
    "build:legacy": "node build/build.js",
    "build:astro": "astro build",
    "dev:astro": "astro dev",
    "preview:astro": "astro preview",
    "start": "npm run serve",
    "dev": "npm run serve",
    "preview": "vite preview --config config/vite.config.js",
    "serve": "node build/dev-server.js",
    "serve:dist": "npm run build && node build/dev-server.js",
    "serve:astro": "npm run build:astro && npm run preview:astro",
    "clean": "node tools/clean.js",
    "clean:tests": "node -e \"import('fs').then(fs=>import('path').then(path=>{const dir='.test-output';if(fs.existsSync(dir)){fs.rmSync(dir,{recursive:true,force:true});fs.mkdirSync(dir,{recursive:true});fs.mkdirSync(path.join(dir,'lighthouse'),{recursive:true});fs.mkdirSync(path.join(dir,'playwright'),{recursive:true});console.log('âœ“ Test outputs cleaned');}}))\"",
    "clean:all": "npm run clean && npm run clean:tests",
    "validate:blog": "node build/generate-blog-post.mjs --validate-all",
    "generate:blog": "node build/generate-blog-post.mjs --all",
    "check-links": "node build/check-links.js",
    "pretest": "npm run lint",
    "test": "cd tests && npm test",
    "test:unit": "cd tests && npm run test:unit",
    "test:accessibility": "cd tests && npm run test:accessibility",
    "test:performance": "cd tests && npm run test:performance",
    "test:coverage": "cd tests && npm run test:coverage",
    "test:e2e": "playwright test --config=config/playwright.config.js --grep-invert=\"visual-regression\"",
    "test:e2e:ui": "playwright test --ui --grep-invert=\"visual-regression\"",
    "test:e2e:headed": "playwright test --headed --grep-invert=\"visual-regression\"",
    "test:e2e:debug": "playwright test --debug --grep-invert=\"visual-regression\"",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.js",
    "test:visual:update": "playwright test tests/e2e/visual-regression.spec.js --update-snapshots",
    "test:navigation:static": "node tests/test-navigation-static.js",
    "test:navigation:browser": "node tests/navigation-test.js",
    "test:navigation": "npm run test:navigation:static",
    "test:navigation:full": "npm run test:navigation:static && npm run test:navigation:browser",
    "test:all": "npm run test:e2e",
    "lighthouse": "lhci autorun",
    "lighthouse:report": "lhci autorun && npx lighthouse http://localhost:8000 --view",
    "lighthouse:audit": "node tools/run-lighthouse-audit.js",
    "lighthouse:ci": "lhci autorun",
    "lint:js": "eslint . --ext .js --max-warnings=50",
    "lint:css": "stylelint \"public/**/*.css\" --ignore-pattern \"public/styles.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "type-check": "tsc --noEmit --project config/tsconfig.json",
    "verify:deployment": "node build/verify-deployment.js",
    "analyze": "echo 'Bundle analysis: Add webpack-bundle-analyzer for optimization insights'"
  },
  "keywords": [
    "cloudflare",
    "cloudflare-workers",
    "enterprise-orchestration",
    "pre-flight-checker",
    "multi-tenant-saas",
    "edge-computing",
    "cost-optimization",
    "serverless-framework",
    "enterprise-development",
    "d1-database",
    "cloudflare-queues",
    "edge-functions",
    "serverless-architecture",
    "enterprise-software",
    "saas-framework",
    "deployment-automation",
    "orchestration-framework",
    "enterprise-scale",
    "global-deployment",
    "zero-cold-starts",
    "edge-native",
    "enterprise-security",
    "compliance-framework",
    "soc2-compliant",
    "gdpr-compliant",
    "hipaa-compliant",
    "enterprise-monitoring",
    "performance-optimization",
    "cost-reduction",
    "development-acceleration",
    "lego-modularity",
    "component-architecture",
    "enterprise-components",
    "saas-acceleration",
    "cloudflare-ecosystem",
    "edge-orchestration",
    "enterprise-deployment",
    "automated-testing",
    "production-readiness"
  ],
  "author": "Clodo Framework",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamylaa/clodo-framework.git"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-html": "^8.1.3",
    "http-server": "^14.1.1",
    "lighthouse": "^12.8.2",
    "playwright": "^1.56.1",
    "postcss-import": "^16.1.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.6.3",
    "vite": "^7.2.4",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.1",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.16.5",
    "jsdom": "^27.2.0"
  }
}
