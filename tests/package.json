{
  "name": "clodo-dev-site-tests",
  "version": "1.0.0",
  "description": "Testing suite for Clodo Framework website",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "vitest run unit/ && vitest run performance.test.js && vitest run accessibility.test.js",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:accessibility": "vitest --run accessibility.test.js",
    "test:performance": "vitest --run performance.test.js",
    "test:integration": "npx playwright test integration/ --project=chromium",
    "test:unit": "vitest --run unit/",
    "test:e2e": "npx playwright test --project=chromium",
    "lint": "eslint tests/",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@vitest/ui": "^4.0.13",
    "axe-core": "^4.8.2",
    "babel-jest": "^30.2.0",
    "vitest": "^1.0.0",
    "jsdom": "^22.1.0",
    "lighthouse": "^11.4.0",
    "puppeteer": "^24.27.0",
    "@playwright/test": "^1.40.0"
  },
  "type": "module"
}
