{
  "name": "@tamyla/clodo-framework-v2",
  "version": "2.0.0-beta.1",
  "description": "Clodo Framework v2 - Build high-performance websites with Cloudflare. A complete framework for creating, building, and deploying modern web applications with Cloudflare Workers.",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "clodo": "bin/clodo.js"
  },
  "files": [
    "lib/",
    "bin/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node bin/clodo.js build",
    "dev": "node bin/clodo.js dev",
    "clean": "node bin/clodo.js clean",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:integration": "node scripts/test-integration.js",
    "test:e2e": "playwright test",
    "lint": "eslint lib/ bin/ --ext .js",
    "lint:fix": "eslint lib/ bin/ --ext .js --fix",
    "type-check": "tsc --noEmit",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish",
    "docs": "jsdoc lib/ -d docs/api",
    "changelog": "auto-changelog",
    "release": "npm run build && npm run test && npm run changelog"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "framework",
    "static-site",
    "jamstack",
    "serverless",
    "edge-computing",
    "performance",
    "seo",
    "accessibility",
    "blog",
    "docs",
    "portfolio"
  ],
  "author": "Tamyla <hello@clodo.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamylaa/clodo-framework-v2.git"
  },
  "homepage": "https://clodo.dev",
  "bugs": {
    "url": "https://github.com/tamylaa/clodo-framework-v2/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/tamylaa"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tamyla/clodo-framework": "^3.1.23",
    "@tamyla/clodo-orchestration": "^1.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chokidar": "^3.5.3",
    "glob": "^10.3.10",
    "fs-extra": "^11.2.0",
    "mime-types": "^2.1.35",
    "sharp": "^0.33.0",
    "clean-css": "^5.3.3",
    "terser": "^5.27.0",
    "html-minifier-terser": "^7.2.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.20",
    "workbox-build": "^7.0.0",
    "sitemap": "^7.1.1",
    "feed": "^4.2.2",
    "markdown-it": "^13.0.2",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "cheerio": "^1.0.0-rc.12",
    "jsdom": "^22.1.0",
    "puppeteer": "^21.6.1",
    "lighthouse": "^11.4.0",
    "pa11y": "^6.2.3",
    "axe-core": "^4.8.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "vitest": "^1.0.4",
    "playwright": "^1.40.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "jsdoc": "^4.0.2",
    "auto-changelog": "^2.4.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "wrangler": "^3.0.0",
    "vite": "^4.0.0 || ^5.0.0",
    "@cloudflare/workers-types": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "@cloudflare/workers-types": {
      "optional": true
    }
  },
  "overrides": {
    "chokidar": "^3.5.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "clodo": {
    "framework": "v2.0.0",
    "engines": {
      "build": "2.0.0",
      "content": "1.0.0",
      "deploy": "1.0.0"
    },
    "capabilities": [
      "blog",
      "docs",
      "portfolio",
      "landing",
      "ecommerce",
      "analytics",
      "forms",
      "search",
      "multilingual",
      "pwa"
    ],
    "integrations": [
      "cloudflare-pages",
      "cloudflare-workers",
      "netlify",
      "vercel",
      "contentful",
      "strapi",
      "sanity",
      "ghost",
      "stripe",
      "paypal",
      "algolia",
      "plausible",
      "google-analytics"
    ]
  }
