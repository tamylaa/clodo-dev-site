{
  "$schema": "./theme.schema.json",
  "name": "Default Theme",
  "version": "1.0.0",
  
  "colors": {
    "brand": {
      "primary": "#1d4ed8",
      "primaryHover": "#1e40af",
      "primaryLight": "#dbeafe",
      "secondary": "#6366f1",
      "secondaryHover": "#4f46e5",
      "accent": "#f59e0b"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f4f4f5",
      "200": "#e4e4e7",
      "300": "#d4d4d8",
      "400": "#a1a1aa",
      "500": "#71717a",
      "600": "#52525b",
      "700": "#3f3f46",
      "800": "#27272a",
      "900": "#18181b",
      "950": "#09090b"
    },
    "semantic": {
      "success": "#22c55e",
      "successLight": "#dcfce7",
      "warning": "#f59e0b",
      "warningLight": "#fef3c7",
      "error": "#ef4444",
      "errorLight": "#fee2e2",
      "info": "#3b82f6",
      "infoLight": "#dbeafe"
    },
    "background": {
      "light": "#ffffff",
      "lightAlt": "#f8fafc",
      "dark": "#0f172a",
      "darkAlt": "#1e293b"
    },
    "text": {
      "light": {
        "primary": "#0f172a",
        "secondary": "#475569",
        "muted": "#94a3b8"
      },
      "dark": {
        "primary": "#f1f5f9",
        "secondary": "#cbd5e1",
        "muted": "#64748b"
      }
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "serif": "Georgia, Cambria, 'Times New Roman', Times, serif",
      "mono": "ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },

  "spacing": {
    "unit": "0.25rem",
    "section": {
      "sm": "2rem",
      "md": "4rem",
      "lg": "6rem",
      "xl": "8rem"
    },
    "container": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "default": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "default": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },

  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },

  "components": {
    "button": {
      "paddingX": "1.5rem",
      "paddingY": "0.75rem",
      "borderRadius": "0.5rem",
      "fontWeight": "600"
    },
    "card": {
      "padding": "1.5rem",
      "borderRadius": "0.75rem",
      "shadow": "md"
    },
    "input": {
      "paddingX": "1rem",
      "paddingY": "0.75rem",
      "borderRadius": "0.375rem",
      "borderColor": "#d4d4d8"
    },
    "header": {
      "height": "4rem",
      "blur": "12px"
    }
  }
}
