# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# --------------------------------------------
# REQUIRED: Newsletter Service (Brevo/Sendinblue)
# --------------------------------------------
# Get these from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
BREVO_LIST_ID=your-brevo-list-id-here

# Optional: Brevo live chat widget ID
# Get from: https://app.brevo.com/conversations/settings/widget
BREVO_WIDGET_ID=

# --------------------------------------------
# OPTIONAL: Analytics & Tracking
# --------------------------------------------
# Google Analytics 4 Measurement ID
# Get from: https://analytics.google.com
GOOGLE_ANALYTICS_ID=

# Cloudflare Web Analytics (usually auto-injected by CF Pages)
# Get from: Cloudflare Dashboard > Web Analytics
CLOUDFLARE_ANALYTICS_TOKEN=

# --------------------------------------------
# OPTIONAL: Search Engine Verification
# --------------------------------------------
# Google Search Console verification code
# Get from: https://search.google.com/search-console
GOOGLE_SITE_VERIFICATION=

# Bing Webmaster Tools verification code
# Get from: https://www.bing.com/webmasters
BING_SITE_VERIFICATION=

# --------------------------------------------
# DEPLOYMENT: Cloudflare Pages
# --------------------------------------------
# Project name in Cloudflare Pages
CLOUDFLARE_PROJECT_NAME=your-project-name

# Cloudflare Account ID (for wrangler commands)
# Get from: Cloudflare Dashboard > Workers & Pages > Overview
CLOUDFLARE_ACCOUNT_ID=

# Cloudflare API Token (for CI/CD deployments)
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Permissions needed: Cloudflare Pages:Edit
CLOUDFLARE_API_TOKEN=

# --------------------------------------------
# BUILD CONFIGURATION
# --------------------------------------------
# Set to 'production' for production builds
NODE_ENV=development

# Enable debug output during build
DEBUG=false

# --------------------------------------------
# OPTIONAL: IndexNow for instant indexing
# --------------------------------------------
# Key for search engine notification
# Generate at: https://www.bing.com/indexnow
INDEXNOW_KEY=

# Sitemap URL (auto-detected from site.config.js if not set)
SITEMAP_URL=

# --------------------------------------------
# OPTIONAL: GitHub Integration
# --------------------------------------------
# GitHub Personal Access Token (for fetching repo stats)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=

# --------------------------------------------
# LOCAL DEVELOPMENT
# --------------------------------------------
# Port for local dev server (default: 8000)
DEV_PORT=8000

# Enable hot reload
HOT_RELOAD=true
