---
// src/components/TableOfContents.astro
// Generates a table of contents from H2/H3 headings in the page
// Provides: sticky TOC navigation, deep link generation, mobile collapsible

export interface Props {
  headings?: Array<{ level: number; text: string; slug: string }>;
  title?: string;
  maxDepth?: number;
}

const {
  headings = [],
  title = 'Table of Contents',
  maxDepth = 3
} = Astro.props;

// Filter headings to only include h2 and h3 (levels 2-3)
const filteredHeadings = headings.filter(h => h.level >= 2 && h.level <= maxDepth);

if (filteredHeadings.length === 0) {
  // Return nothing if no headings found
}
---

{filteredHeadings.length > 0 && (
  <aside class="toc-wrapper">
    <nav class="table-of-contents" aria-label="Table of contents">
      <h3 class="toc-title">{title}</h3>
      <ul class="toc-list">
        {filteredHeadings.map((heading) => (
          <li class={`toc-item toc-item--level-${heading.level}`}>
            <a href={`#${heading.slug}`} class="toc-link">
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </aside>
)}

<style>
  .toc-wrapper {
    position: relative;
  }

  .table-of-contents {
    background-color: var(--toc-bg, #f9fafb);
    border: 1px solid var(--toc-border, #e5e7eb);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .toc-title {
    margin: 0 0 1rem 0;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--toc-title, #1f2937);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .toc-item {
    margin: 0;
  }

  .toc-item--level-3 .toc-link {
    padding-left: 1rem;
    font-size: 0.875rem;
    color: var(--toc-link-muted, #6b7280);
  }

  .toc-link {
    display: block;
    padding: 0.25rem 0.5rem;
    color: var(--toc-link, #1f2937);
    text-decoration: none;
    border-left: 3px solid transparent;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .toc-link:hover {
    color: var(--toc-link-hover, #1d4ed8);
    background-color: var(--toc-link-hover-bg, #eff6ff);
    border-left-color: var(--toc-link-hover-border, #1d4ed8);
  }

  .toc-link:active {
    color: var(--toc-link-active, #1e40af);
    background-color: var(--toc-link-active-bg, #dbeafe);
    border-left-color: var(--toc-link-active-border, #1e40af);
  }

  @media (max-width: 640px) {
    .table-of-contents {
      margin-bottom: 1.5rem;
      padding: 1rem;
    }

    .toc-link {
      padding: 0.25rem 0.375rem;
    }

    .toc-item--level-3 .toc-link {
      padding-left: 0.75rem;
    }
  }
</style>
