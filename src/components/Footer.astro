---
// src/components/Footer.astro
// Main footer with links, newsletter signup, and site information
// Provides: footer navigation, newsletter form, legal links, social links

export interface Props {
  year?: number;
}

const { year = new Date().getFullYear() } = Astro.props;

const footerSections = [
  {
    title: 'Product',
    id: 'footer-product',
    links: [
      { label: 'Product Overview', href: '/product/' },
      { label: 'Documentation', href: '/docs/' },
      { label: 'Code Examples', href: '/examples/' },
      { label: 'Pricing', href: '/pricing/' },
      { label: 'Migration Guide', href: '/migrate/' }
    ]
  },
  {
    title: 'Resources',
    id: 'footer-resources',
    links: [
      { label: 'Blog', href: '/blog/' },
      { label: 'Guides', href: '/docs/' },
      { label: 'API Reference', href: '/docs/' },
      { label: 'Community', href: '/community/' },
      { label: 'GitHub', href: 'https://github.com/tamylaa/clodo-starter-template' }
    ]
  },
  {
    title: 'Company',
    id: 'footer-company',
    links: [
      { label: 'About', href: '/about.html' },
      { label: 'Contact', href: 'mailto:hello@clodo.dev' },
      { label: 'Status', href: 'https://status.clodo.dev' },
      { label: 'Press Kit', href: '/press-kit.html' }
    ]
  },
  {
    title: 'Legal',
    id: 'footer-legal',
    links: [
      { label: 'Privacy Policy', href: '/privacy.html' },
      { label: 'Terms of Service', href: '/terms.html' },
      { label: 'Security', href: '/security.html' },
      { label: 'Code of Conduct', href: '/code-of-conduct.html' }
    ]
  }
];
---

<footer class="footer" role="contentinfo">
  <div class="footer-content">
    <!-- Brand Section -->
    <div class="footer-section footer-brand">
      <div class="footer-logo">
        <svg class="logo-icon" aria-hidden="true" width="24" height="24" viewBox="0 0 256 256">
          <defs>
            <linearGradient id="footer-logo-g" x1="0" y1="0" x2="1" y2="1">
              <stop offset="0%" stop-color="#1d4ed8"/>
              <stop offset="100%" stop-color="#6366f1"/>
            </linearGradient>
          </defs>
          <rect width="256" height="256" rx="48" fill="#0b1220"/>
          <path d="M144 16l-80 128h56l-8 96 80-128h-56l8-96z" fill="url(#footer-logo-g)"/>
        </svg>
        <span class="logo-text">Clodo</span>
      </div>
      <p class="footer-tagline">
        Building the future of edge computing, one service at a time. Join thousands of developers deploying on Cloudflare Workers with enterprise-grade performance and security.
      </p>

      <!-- Newsletter Signup -->
      <div class="footer-newsletter" id="newsletter">
        <h4>Stay Updated</h4>
        <p id="newsletter-helper" class="form-helper">Product updates, engineering posts, and launch notes. <strong>1â€“2 emails/month.</strong></p>
        <form class="newsletter-form" action="#" method="post" data-newsletter-form>
          <input type="text" name="website" class="hp-field" aria-hidden="true" tabindex="-1" autocomplete="off">
          <input type="hidden" name="source" value="footer">
          <div class="form-group">
            <label for="newsletter-email" class="sr-only">Email address</label>
            <input 
              id="newsletter-email" 
              name="email" 
              type="email" 
              placeholder="Enter your email" 
              autocomplete="email" 
              inputmode="email" 
              aria-describedby="newsletter-helper" 
              required
            >
            <button type="submit" class="btn btn--primary" aria-label="Subscribe to newsletter">Subscribe</button>
          </div>
          <div class="reassurance">No spam. Unsubscribe anytime.</div>
          <div class="consent">
            <input type="checkbox" id="newsletter-consent" name="consent" required>
            <label for="newsletter-consent">
              I agree to receive emails from Clodo Framework and accept the <a href="/privacy.html">Privacy Policy</a>.
            </label>
          </div>
          <p class="form-message" aria-live="polite" role="status"></p>
          <noscript>
            <p class="form-helper">JavaScript is required to submit this form. Please email <a href="mailto:hello@clodo.dev">hello@clodo.dev</a>.</p>
          </noscript>
        </form>
      </div>
    </div>

    <!-- Navigation Sections -->
    {footerSections.map((section) => (
      <nav class="footer-section" aria-labelledby={section.id}>
        <h4 id={section.id}>{section.title}</h4>
        <ul role="list">
          {section.links.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </nav>
    ))}
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <p class="footer-copyright">
      &copy; {year} Clodo Framework. All rights reserved.
    </p>
    <div class="footer-social">
      <a href="https://github.com/tamylaa" aria-label="GitHub" title="Follow us on GitHub">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
      <a href="https://twitter.com/clodoframework" aria-label="Twitter" title="Follow us on Twitter">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2s9 5 20 5a9.5 9.5 0 00-9-5.5c4.75 2.25 7-7 7-7s2.75 4.5 2-8.5a4.5 4.5 0 00-7-4z"/>
        </svg>
      </a>
      <a href="https://linkedin.com/company/clodo" aria-label="LinkedIn" title="Follow us on LinkedIn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
          <circle cx="4" cy="4" r="2"/>
        </svg>
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--footer-bg, #0f1419);
    color: var(--footer-text, #d1d5db);
    border-top: 1px solid var(--footer-border, #1f2937);
  }

  .footer-content {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3rem 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    gap: 2rem;
  }

  .footer-brand {
    grid-column: 1 / 3;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-section h4 {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--footer-heading, #ffffff);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-section a {
    color: var(--footer-link, #d1d5db);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-section a:hover {
    color: var(--footer-link-hover, #ffffff);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--footer-heading, #ffffff);
  }

  .footer-tagline {
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0 0 2rem 0;
    color: var(--footer-text, #d1d5db);
  }

  .footer-newsletter {
    margin-top: 2rem;
  }

  .footer-newsletter h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    text-transform: none;
    letter-spacing: normal;
  }

  .form-helper {
    font-size: 0.75rem;
    color: var(--footer-muted, #9ca3af);
    margin: 0 0 1rem 0;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    gap: 0.5rem;
  }

  .form-group input,
  .form-group button {
    flex: 1;
    padding: 0.5rem;
    border-radius: 0.375rem;
    border: 1px solid var(--form-border, #374151);
    background-color: var(--form-bg, #1f2937);
    color: var(--form-text, #ffffff);
    font-size: 0.875rem;
  }

  .form-group button {
    flex: 0 0 auto;
    white-space: nowrap;
    cursor: pointer;
  }

  .reassurance {
    font-size: 0.75rem;
    color: var(--footer-muted, #9ca3af);
  }

  .consent {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.75rem;
  }

  .consent input {
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .consent a {
    color: var(--footer-link, #d1d5db);
  }

  .form-message {
    font-size: 0.75rem;
    margin: 0;
  }

  .footer-bottom {
    border-top: 1px solid var(--footer-border, #1f2937);
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1280px;
    margin: 0 auto;
    gap: 1rem;
  }

  .footer-copyright {
    font-size: 0.75rem;
    color: var(--footer-muted, #9ca3af);
    margin: 0;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 0.375rem;
    background-color: var(--footer-social-bg, #1f2937);
    color: var(--footer-social-text, #d1d5db);
    transition: all 0.2s ease;
  }

  .footer-social a:hover {
    background-color: var(--footer-social-hover-bg, #374151);
    color: var(--footer-social-hover-text, #ffffff);
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr 1fr;
    }

    .footer-brand {
      grid-column: 1 / 4;
    }
  }

  @media (max-width: 640px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-brand {
      grid-column: 1;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .form-group {
      flex-direction: column;
    }

    .form-group input,
    .form-group button {
      width: 100%;
    }
  }
</style>
