    margin: 1rem 0;
  }

  .links {
    margin: 1rem 0;
  }

  .links a {
    color: var(--primary-color, #1d4ed8);
    text-decoration: none;
  }

  .links a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .hero h1 {
