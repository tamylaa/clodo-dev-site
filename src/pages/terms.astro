</BaseLayout>

<style>
  .breadcrumbs {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem;
    font-size: 0.875rem;
    color: var(--text-muted, #6b7280);
  }

  .breadcrumbs ol {
    list-style: none;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin: 0;
    padding: 0;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '/';
    margin-left: 0.5rem;
  }

  .breadcrumbs a {
    color: var(--primary-color, #1d4ed8);
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    text-decoration: underline;
  }

  .hero-section {
    padding: 3rem 1rem;
    background: linear-gradient(135deg, #f0f9ff, #f9fafb);
    border-bottom: 1px solid var(--border-color, #e5e7eb);
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-section h1 {
    font-size: 2rem;
    margin: 0 0 0.5rem 0;
    color: var(--heading-color, #0f172a);
  }

  .last-updated {
    color: var(--text-muted, #6b7280);
    font-size: 0.875rem;
    margin: 0;
  }

  .policy-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .policy-content {
    max-width: 900px;
  }

  .policy-section {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color, #e5e7eb);
  }

  .policy-section:last-child {
    border-bottom: none;
  }

  .policy-section h2 {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    color: var(--heading-color, #0f172a);
  }

  .policy-section p {
    color: var(--text-secondary, #475569);
    line-height: 1.6;
    margin: 1rem 0;
  }

  .policy-section ul {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }

  .policy-section li {
    margin: 0.75rem 0;
    color: var(--text-secondary, #475569);
    line-height: 1.6;
    padding-left: 1.5rem;
    position: relative;
  }

  .policy-section li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--primary-color, #1d4ed8);
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 1.5rem;
    }

    .policy-section h2 {
      font-size: 1.25rem;
    }
  }
</style>
